rule fastq_to_fasta:
    """
    Convert fastq to fasta
    """
    input:
        "phasing/CCS_Amplicon/{barcode}/haplotypes/{barcode}.fastq"
    output:
        "phasing/CCS_Amplicon/{barcode}/haplotypes/{barcode}.fasta"
    conda:
        "../envs/fastq_to_fasta.yaml"
    shell:
        "fastools fq2fa {input} {output}"
